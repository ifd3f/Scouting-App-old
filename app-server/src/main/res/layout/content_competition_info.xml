<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.burlingamerobotics.scouting.server.activity.CompetitionInfoActivity"
    tools:showIn="@layout/activity_competition_info"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_matches"
        tools:listitem="@layout/item_show_match_row"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_show_date"
        tools:text="3/6/18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
