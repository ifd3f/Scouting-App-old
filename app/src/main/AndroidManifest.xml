<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.burlingamerobotics.scouting">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/panther_scouting"
        android:label="@string/app_name"
        android:roundIcon="@drawable/panther_scouting"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ClientConnectActivity"
            android:label="@string/title_activity_client_connect"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.burlingamerobotics.scouting.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MasterManagementActivity"
            android:label="@string/title_activity_master_management"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.burlingamerobotics.scouting.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ClientBrowser"
            android:label="@string/title_activity_client_browser"
            android:parentActivityName=".activity.ClientConnectActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.burlingamerobotics.scouting.activity.ClientConnectActivity" />
        </activity>
    </application>

</manifest>