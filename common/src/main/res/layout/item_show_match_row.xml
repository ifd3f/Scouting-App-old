<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/label_match_number"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="32." />

    <LinearLayout
        android:id="@+id/div_alliance_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/team_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/label_match_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_team_red1"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />

            <TextView
                android:id="@+id/text_team_red2"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />

            <TextView
                android:id="@+id/text_team_red3"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_alliance_red_score"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="2"
            tools:text="321" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/div_alliance_red"
        app:layout_constraintRight_toLeftOf="@id/div_alliance_blue"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/team_blue">

        <TextView
            android:id="@+id/text_match_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="Blue Victory" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/div_alliance_blue"
        android:background="@color/team_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/text_alliance_blue_score"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="2"
            tools:text="322" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_team_blue1"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />

            <TextView
                android:id="@+id/text_team_blue2"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />

            <TextView
                android:id="@+id/text_team_blue3"
                style="@style/AppTheme.TeamNumberEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minEms="3"
                tools:text="14232" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>