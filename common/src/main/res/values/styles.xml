<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="AppTheme.AttrHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
    </style>

    <style name="AppTheme.AttrData" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="AppTheme.TeamNumberEdit">
        <item name="android:textSize">5.5pt</item>
        <item name="android:minEms">3</item>
        <item name="android:maxLength">5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.LabelTeamLarge" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/team_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.LabelTeamRedLarge" parent="AppTheme.LabelTeamLarge">
        <item name="android:background">@color/team_red</item>
    </style>

    <style name="AppTheme.LabelTeamBlueLarge" parent="AppTheme.LabelTeamLarge">
        <item name="android:background">@color/team_blue</item>
    </style>

    <style name="AppTheme.LabelMatchScoreLarge" parent="TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">45pt</item>
    </style>

    <style name="AppTheme.LabelMatchResultLarge">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppTheme.FormItemLabel">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_gravity">left|center</item>
    </style>

    <style name="AppTheme.FormItemSpinner">
        <item name="android:layout_gravity">right|fill_horizontal</item>
    </style>

    <style name="AppTheme.FormItemShortField">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

</resources>
