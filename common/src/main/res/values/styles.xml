<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AttrHeader" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
    </style>

    <style name="AppTheme.AttrData" parent="TextAppearance.AppCompat">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">#555555</item>
    </style>

    <style name="AppTheme.TeamNumberEdit">
        <item name="android:minEms">3</item>
        <item name="android:maxLength">5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
